<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>binary-tarball</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <includes>
                <include>com.datastax.cassandra:dse-driver</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>com.datastax.cassandra:*:*:sources:*</exclude>
                <exclude>com.fasterxml.jackson.core:*</exclude>
                <exclude>com.esri.geometry:*</exclude>
                <exclude>org.json:*</exclude>
                <exclude>org.codehaus.jackson:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>src</outputDirectory>
            <outputFileNameMapping>
                ${artifact.artifactId}-${artifact.version}-src.zip
            </outputFileNameMapping>
            <useProjectAttachments>true</useProjectAttachments>
            <unpack>false</unpack>
            <includes>
                <include>com.datastax.cassandra:*:*:sources:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/apidocs</directory>
            <outputDirectory>apidocs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
